{
  "version": 2,
  "builds": [
    { "src": "api/*.py", "use": "@vercel/python" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/predict", "dest": "/api/predict.py" },
    { "src": "/", "dest": "/public/index.html" },
    { "src": "^/(.*)$", "dest": "/public/$1" }
  ]
}
